<Window x:Class="WpfApp.AddCrawler"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        Title="Add Crawler" Height="215" Width="410" WindowStyle="SingleBorderWindow" ScrollViewer.VerticalScrollBarVisibility="Disabled" MinWidth="410" MinHeight="215" MaxWidth="410" MaxHeight="215" ResizeMode="NoResize">
    
    <Grid>
        <TextBox x:Name="txtURL" HorizontalAlignment="Left" Margin="118,27,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="264"/>
        <TextBox x:Name="txtKeyword" HorizontalAlignment="Left" Margin="118,73,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="264"/>
