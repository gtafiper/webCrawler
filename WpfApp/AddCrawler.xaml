        <Label Content="Title/keyword:" HorizontalAlignment="Left" Height="18" Margin="30,73,0,0" VerticalAlignment="Top" Width="85" Padding="0,0,0,0"/>
        <Button Content="Add" HorizontalAlignment="Left" Height="24" Margin="319,133,0,0" VerticalAlignment="Top" Width="63" Click="OnAdd"/>
        <ComboBox x:Name="comboTime" HorizontalAlignment="Left" Height="24" Margin="120,132,0,0" VerticalAlignment="Top" Width="130" SelectedIndex="0">
            <ComboBoxItem Content="1 min"/>
            <ComboBoxItem Content="5 min"/>
            <ComboBoxItem Content="15 min"/>
            <ComboBoxItem Content="1 hour"/>
            <ComboBoxItem Content="1 day"/>
        </ComboBox>
        <Label Content="Run Every:" HorizontalAlignment="Left" Height="18" Margin="30,136,0,0" VerticalAlignment="Top" Width="85" Padding="0,0,0,0"/>

    </Grid>
</Window>
